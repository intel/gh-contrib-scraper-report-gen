{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run GUI",
            "windows": {
                "command": ".\\run.ps1",
            },
            "linux": {
                "command": "./run.sh",
            },
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run CLI",
            "windows": {
                "command": ".\\run.ps1",
                "args": [
                    "-Tasks", "cli",
                    "-PythonArgs", "${input:pythonArgs}"
                ]
            },
            "linux": {
                "command": "./run.sh",
                "args": [
                    "-Tasks", "cli",
                    "-PythonArgs", "${input:pythonArgs}"
                ]
            },
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ],
    "inputs": [
        {
            "id": "pythonArgs",
            "description": "Python arguments to pass to the run script",
            "type": "promptString"
        }
    ]
}
